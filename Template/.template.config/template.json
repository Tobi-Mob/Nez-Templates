{
    "$schema": "http://json.schemastore.org/template",
    "author": "Tobi-Mob",
    "name": "Nez Game",
    "identity": "nez",
    "shortName": "nez",
    "sourceName": "ProjectTemplate",
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    
    "symbols": {
        "framework": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "FNA",
            "isRequired": false,
            "description": "Framework to use",
            "choices": [
                {
                    "choice": "FNA",
                    "description": "FNA"
                },
                {
                    "choice": "MG38",
                    "description": "Monogame 3.8"
                }
            ]
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(framework != 'FNA')",
                    "exclude": [
                        "ProjectTemplate/BuildTargets/FNA.targets",
                        "ProjectTemplate/ProjectTemplate.FNA.csproj",
                        "ProjectTemplate.FNA.sln"
                    ]
                },
                {
                    "condition": "(framework != 'MG38')",
                    "exclude": [
                        "ProjectTemplate/ProjectTemplate.MG38.csproj",
                        "ProjectTemplate.MG38.sln"
                    ]    
                }
            ]
        }
    ],    
    
    "postActions": [
        {
            "condition": "(OS != \"Windows_NT\")",
            "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
            "args": {
                "executable": "bash",
                "args": "build.sh",
                "redirectStandardError": "false",
                "redirectStandardOutput": "false"                
            },
            "manualInstructions": [
                {
                    "text": "Run 'build.sh'"
                }
            ],
            "continueOnError": false,
            "description ": "setups the project by calling build.sh"
        },
        {
            "condition": "(OS == \"Windows_NT\")",
            "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
            "args": {
                "executable": "build.cmd",
                "redirectStandardError": "false",
                "redirectStandardOutput": "false"
            },
            "manualInstructions": [
                {
                    "text": "Run 'build.cmd'"
                }
            ],
            "continueOnError": false,
            "description ": "setups the project by calling build.cmd"
        }             
    ]
}